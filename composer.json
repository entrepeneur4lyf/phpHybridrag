{
    "name": "hybridrag/hybridrag",
    "description": "A Hybrid Retrieval-Augmented Generation system combining vector and graph-based approaches",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Shawn McAllister",
            "email": "shawn.mcallister@me.com"
        }
    ],
    "require": {
        "php": "^8.3",
        "codewithkyrian/chromadb-php": "^0.3.0",
        "guzzlehttp/guzzle": "^7.0",
        "monolog/monolog": "^2.0",
        "openai-php/client": "^0.4.0",
        "php-ai/php-ml": "^0.10.0",
        "psr/simple-cache": "^3.0",
        "triagens/arangodb": "^3.8"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "HybridRAG\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "php-http/discovery": true
        }
    },
    "minimum-stability": "stable"
}
